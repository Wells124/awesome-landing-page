---
import siteInfo from '~/data/site-info.js'
import Logo from './Logo.astro'
import LanguageMenu from './LanguageMenu.astro'

const siteName = siteInfo.name

---

<nav class="w-full flex items-center justify-between">
  <a
    href="/"
    data-astro-prefetch
    title="Home"
    data-home-link
    class="flex items-center"
  >
    <span class="sr-only">{siteName} Logo</span>
    <Logo class="w-8 h-8 sm:w-10 sm:h-10" />
    <span class="ml-2 text-lg sm:text-2xl">{siteName}</span>
  </a>

  <!-- <div class="hidden shrink flex-row items-center gap-16 lg:flex text-base">
    <a href="https://docs.astro.build" class="link">Documentation</a>
    <a href="/showcase/" data-astro-prefetch class="link">Showcase</a>
    <ResourcesMenu />
    <a href="/blog/" data-astro-prefetch class="link">Blog</a>
  </div> -->

  <div class="hidden gap-4 sm:flex">
    <LanguageMenu />
  </div>
</nav>

<script>
  import { getElement } from '~/helpers/dom.js'
  getElement('[data-home-link]', HTMLAnchorElement).addEventListener(
    'contextmenu',
    (event) => {
      event.preventDefault()
      window.location.href = '/press#assets'
    }
  )
</script>
